<% if book.favorited_by?(current_user) %>
  <%= form_with model: @favorite, url: book_favorites_path(book.id), method: :delete, local: false  do |f| %>
  <%= f.hidden_field :book_id, value: book.id %>
    <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <snap class="text-danger"><%= book.favorites.count %></snap>
    <% end %>
  <% end %>
<% else %>
  <%= form_with model: @favorite, url: book_favorites_path(book.id), method: :post, local: false  do |f| %>
  <%= f.hidden_field :book_id, value: book.id %>
    <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: blue;"></i>
    <snap class="text-primary"><%= book.favorites.count %></snap>
    <% end %>
  <% end %>
<% end %>


